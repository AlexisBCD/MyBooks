{% extends 'base.html.twig' %}

{% block body %}
    <h2>Login</h2>

    {% if error %}
        <div style="color: red;">{{ error }}</div>
    {% endif %}

    <p class="alert alert-warning"><b>Les identifiants de d√©monstration sont test:test (username:password)</b></p>

    <form action="/login" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="test" {# value="{{ last_username }}" #}/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" value="test"/>

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <button type="submit">login</button>
    </form>
{% endblock %}