{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <!-- Carte d'informations sur le livre -->
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">{{ book.titre }}
                        {% if book.isLoaned %}
                            <span class="badge bg-warning">Prêté</span> 
                        {% else %}
                            <span class="badge bg-success">Disponible</span> 
                        {% endif %}
                        </h1>
                        <div class="card-text">
                            <p><strong>Auteur du livre:</strong> {{ book.auteur }}</p>
                            <p><strong>Date de publication:</strong> {{ book.createdAt|date('d-m-Y') }}</p>
                            <p><strong>ISBN:</strong> {{ book.ISBN }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Carte d'historique des emprunts -->
        <div class="row mt-4">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Historique des emprunts</h2>
                        {% if emprunts|length > 0 %}
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>ID Emprunt</th>
                                        <th>Nom de l'emprunteur</th>
                                        <th>Email de l'emprunteur</th>
                                        <th>Date de l'emprunt</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for emprunt in emprunts %}
                                        <tr>
                                            <td>{{ emprunt.id }}</td>
                                            <td>{{ emprunt.borrowerName }}</td>
                                            <td>{{ emprunt.borrowerEmail }}</td>
                                            <td>{{ emprunt.loanDate|date('d-m-Y') }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p>Il n'y a pas d'historique d'emprunts pour ce livre.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
