{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">{{ book.titre }}</h1>

                        <div class="card-text">
                            <p><strong>Auteur du livre:</strong> {{ book.auteur }}</p>
                            <p><strong>Date de publication:</strong> {{ book.createdAt|date('Y-m-d H:i:s') }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
