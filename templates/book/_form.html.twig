<form method="post">
    <div class="mb-3">
        <label for="title" class="form-label">Titre</label>
        <input type="text" id="title" name="title" placeholder="Exemple : Le petit Nicolas" required class="form-control {{ violations.firstname is not defined ? '' : 'is-invalid' }}" value="{{ student.firstname }}">
        {% for violation in violations.firstname %}
            <div class="invalid-feedback">{{ violation }}</div>
        {% endfor %}
    </div>
    <div class="mb-3">
        <label for="author" class="form-label">Auteur</label>
        <input type="text" id="author" name="author" placeholder="Exemple : René Goscinny" required class="form-control {{ violations.old is not defined ? '' : 'is-invalid' }}" value="{{ student.old }}">
        {% for violation in violations.old %}
            <div class="invalid-feedback">{{ violation }}</div>
        {% endfor %}
    </div>
        <div class="mb-3">
        <label for="yearOfPublication" class="form-label">Annee de publication</label>
        <input type="date" id="yearOfPublication" name="yearOfPublication" placeholder="Exemple : 23/09/2002" required class="form-control {{ violations.name is not defined ? '' : 'is-invalid' }}" value="{{ student.name }}">
        {% for violation in violations.name %}
            <div class="invalid-feedback">{{ violation }}</div>
        {% endfor %}
    </div>
        <div class="mb-3">
        <label for="editor" class="form-label">Editeur</label>
        <input type="text" id="editor" name="editor" placeholder="Exemple : Maison d'édition Gallimard" required class="form-control {{ violations.name is not defined ? '' : 'is-invalid' }}" value="{{ student.name }}">
        {% for violation in violations.name %}
            <div class="invalid-feedback">{{ violation }}</div>
        {% endfor %}
    </div>
        <div class="mb-3">
        <label for="ISBN" class="form-label">ISBN</label>
        <input type="text" id="ISBN" name="ISBN" placeholder="Exemple : 978-2070364237" required class="form-control {{ violations.name is not defined ? '' : 'is-invalid' }}" value="{{ student.name }}">
        {% for violation in violations.name %}
            <div class="invalid-feedback">{{ violation }}</div>
        {% endfor %}
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>